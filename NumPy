import numpy as np

def fibonacci_numpy(n):
    """
    Generate the first n Fibonacci numbers using NumPy.
    """
    if n <= 0:
        return np.array([])  # Return an empty array for non-positive n
    elif n == 1:
        return np.array([0])  # First Fibonacci number
    elif n == 2:
        return np.array([0, 1])  # First two Fibonacci numbers

    # Create an array to hold the Fibonacci sequence
    fib = np.zeros(n, dtype=int)
    fib[0], fib[1] = 0, 1

    # Fill the array
    for i in range(2, n):
        fib[i] = fib[i - 1] + fib[i - 2]

    return fib

# Example: Generate the first 10 Fibonacci numbers
n = 10
fib_series = fibonacci_numpy(n)
print(f"The first {n} Fibonacci numbers: {fib_series}")
